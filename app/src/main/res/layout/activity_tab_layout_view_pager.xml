<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idt.yfzx.wdc.lightofandroidadvanced.activity.TabLayoutViewPager">

    <Button
        android:id="@+id/btn_txtnav"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:onClick="btn_onclick"
        android:text="文字导航"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_txtnav_scrollable"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="132dp"
        android:onClick="btn_onclick"
        android:text="文字导航可滑动"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_picnav"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="228dp"
        android:onClick="btn_onclick"
        android:text="图片导航"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
